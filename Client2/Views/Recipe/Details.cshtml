@model API.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex align-items-center justify-content-start">
    <h1 class="d-flex align-items-center">Detail Resep</h1><br />
    <h3 class="d-flex align-items-center">
    @Html.DisplayFor(model => model.RecipeName)
    </h3>

</div>
<!--  -->
<div class="container">
<!-- image -->
    <div class="row gx-1 ">
        <div class="col-12">
        </div>
    </div>

<!-- description -->
    <div class="row gx-1 ">
        <div class="col-12">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>

<!-- other -->
    <div class="row gx-1 ">
        <div class="col-12">
            <i class="far fa-clock">
                @Html.DisplayFor(model => model.CookingTime)
            </i>
            <i class="fas fa-utensils">
                @Html.DisplayFor(model => model.Total)
            </i>
            @Html.DisplayFor(model => model.Difficulty)

        </div>
    </div>

    <div class="row gx-1 ">
    <!-- ingredients -->
        <div class="col-md-6">
            @Html.DisplayFor(model => model.IngredientName)

        </div>

    <!-- step -->
        <div class="col-md-6">
            @Html.DisplayFor(model => model.Step)

        </div>
    </div>
</div>

