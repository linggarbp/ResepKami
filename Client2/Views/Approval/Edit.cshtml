@model API.Models.Approval

@{
    ViewData["Title"] = "Edit";
}

<div class="text-white">
    <a class="btn btn-outline-dark btn-rounded btn-floating btn-lg" href="~/Recipe/Index/" role="button"><i class="fas fa-arrow-left"></i></a>
</div>

<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Edit & Approval</h3>
            <div class="card">
                <form asp-action="Edit" class="form-card">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Id" class="form-control-label px-3">ID</label>
                            <input asp-for="Id" type="text">
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="RecipeId" class="form-control-label px-3">Recipe ID</label>
                            <input asp-for="RecipeId" type="text">
                            <span asp-validation-for="RecipeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex">
                            <label asp-for="RecipeName" class="form-control-label px-3">Recipe Name</label>
                            <input asp-for="RecipeName" type="text">
                            <span asp-validation-for="RecipeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                        </label>
                    </div>
                    <div class="row justify-content-center">
                        <div class="form-group col-sm-12 mt-3">
                            <input type="submit" value="Save" class="btn-block btn-primary"
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
