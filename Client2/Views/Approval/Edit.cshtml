@model API.Models.Approval

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Approval</h4>
<hr />
<div class="container">
    <h2 class="mt-5 mb-3">Edit Recipe Request</h2>
    <form>
      <div class="form-group">
        <label for="recipeId">Recipe ID</label>
        <input type="text" class="form-control" id="recipeId" placeholder="Enter Recipe ID">
      </div>
      <div class="form-group">
        <label for="recipeName">Recipe Name</label>
        <input type="text" class="form-control" id="recipeName" placeholder="Enter Recipe Name">
      </div>
      <div class="form-group">
        <label for="approved">Approved</label>
        <select class="form-control" id="approved">
          <option value="true">Yes</option>
          <option value="false">No</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
