@model API.Models.Approval

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Approval</h4>
    <hr />

  <div class="container">
    <h2 class="mt-5 mb-3">Recipe Deletion Request</h2>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Recipe Information</h5>
        <form>
          <div class="form-group">
            <label for="recipeID">Recipe ID</label>
            <input type="text" class="form-control" id="recipeID" placeholder="Enter recipe ID">
          </div>
          <div class="form-group">
            <label for="recipeName">Recipe Name</label>
            <input type="text" class="form-control" id="recipeName" placeholder="Enter recipe name">
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="approved">
            <label class="form-check-label" for="approved">Approved</label>
          </div>
          <button type="submit" class="btn btn-danger mt-3">Submit Request</button>
        </form>
      </div>
    </div>
  </div>

    <form asp-action="Remove" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
