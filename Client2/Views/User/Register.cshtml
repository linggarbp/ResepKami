<div class="d-flex align-items-center justify-content-center">
    <h1 class="d-flex align-items-center">Register</h1>
</div>
<div class="d-flex align-items-center justify-content-center" style="height: 350px;">
    <form action="/User/Register" method="post">
        <!-- Id input -->
        <div class="form-outline mb-4">
            <input asp-for="Id" id="id" class="form-control" />
            <label asp-for="Id" class="form-label control-label" for="id">Id</label>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <!-- Username input -->
        <div class="form-outline mb-4">
            <input asp-for="UserName" id="username" class="form-control" />
            <label asp-for="UserName" class="form-label control-label" for="username">Username</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <!-- Email input -->
        <div class="form-outline mb-4">
            <input asp-for="Email" type="email" id="email" class="form-control" />
            <label asp-for="Email" class="form-label control-label" for="email">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input asp-for="Password" type="password" id="pw" class="form-control" />
            <label asp-for="Password" class="form-label control-label" for="pw">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Submit button -->
        <input type="submit" value="Create" class="btn btn-primary btn-block mb-4" />

        <!-- Register buttons -->
        <div class="text-center">
            <p>Have an Account? <a href="/User/Login">Login</a></p>
        </div>
    </form>
</div>

